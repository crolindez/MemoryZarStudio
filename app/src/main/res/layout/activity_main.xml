<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#787878"
	tools:context="es.carlosrolindez.memoryzar.MainActivity" >
	<RelativeLayout	
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#787878" >
		<Button
			android:id="@+id/start_button"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:background="@drawable/start_button" 
			android:onClick="start"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="#787878" >
		<RelativeLayout
			android:id="@+id/upper_half"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="#787878" >
			<Button
				android:id="@+id/button_upleft"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/button_upleft" />
			<Button
				android:id="@+id/button_upright"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/button_upleft"
				android:background="@drawable/button_upright" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/lower_half"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/upper_half"
			android:background="#787878" >
			<Button
				android:id="@+id/button_downleft"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/button_downleft" />
			<Button
				android:id="@+id/button_downright"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/button_downleft"
				android:background="@drawable/button_downright" />
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>